<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" tools:context="com.android.ketaoapp.fragment.HomeFragment"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/item_reccourse_rl_detail">
        <TextView
            android:id="@+id/item_reccourse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会计学"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/spread_third_img"
            android:layout_toStartOf="@+id/spread_third_img"
            android:textColor="@color/text_color"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_below="@+id/item_reccourse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_treehole_vote_count_icon"
                    />
                <TextView
                    android:id="@+id/item_reccourse_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/item_reccourse_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_treehole_week_course_icon"
                    />
                <TextView
                    android:id="@+id/item_reccourse_course_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社会科学"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_reccourse_avg_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.6"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/blue"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_bar_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/item_reccourse_rl_eva">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_card_comment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:id="@+id/item_reccourse_num_eva" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/title_bar_line"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/item_reccourse_rl_collect">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_treehole_hehe"
                android:id="@+id/item_reccourse_num_collect_ic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:id="@+id/item_reccourse_num_collect" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
