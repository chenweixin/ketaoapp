<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/grey"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent" 
        android:layout_height="1dp"
        android:background="@color/title_bar_line"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/rl_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/rb_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/tabbar_home_pressed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="13dp"
                android:text="首页"
                android:id="@+id/tab_text_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/rb_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/tabbar_message_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_color"
                android:textSize="13dp"
                android:text="消息"
                android:id="@+id/tab_text_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/rb_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/tabbar_profile_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_color"
                android:textSize="13dp"
                android:text="我"
                android:id="@+id/tab_text_3" />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>