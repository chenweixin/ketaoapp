<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/search_bar"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/search_edt"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edt_search"
                android:drawablePadding="5dp"
                android:background="@null"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="#BCBDB8"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:hint="课程名称"/>
        </LinearLayout>

        <TextView
            android:id="@+id/search_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="取消"
            android:textSize="16dp"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@drawable/text_click_selector"
            />

    </LinearLayout>
    <ListView
        android:id="@+id/lv_search_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/trans"
        android:cacheColorHint="@color/trans">

    </ListView>

</LinearLayout>
