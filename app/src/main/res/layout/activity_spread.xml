<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.ketaoapp.SpreadActivity"
    android:orientation="vertical">

    <com.android.ketaoapp.view.DetailTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:item_title="推广"
        my:left_src="@drawable/detail_navigation_back"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lv_reccourse"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:cacheColorHint="@color/trans"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        android:overScrollMode="never"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextColor="#000000"
        />
</LinearLayout>
