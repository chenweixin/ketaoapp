<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" tools:context="com.android.ketaoapp.fragment.HomeFragment"
    android:orientation="vertical">

    <com.android.ketaoapp.view.DetailTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:left_src="@drawable/detail_navigation_back"
        my:item_title="课程信息"
        >

    </com.android.ketaoapp.view.DetailTitleView>

    <FrameLayout
        android:id="@+id/rl_cover_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载..."
            android:layout_gravity="center"
            android:textSize="16dp"
            />

    </FrameLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lv_course"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:cacheColorHint="@color/trans"
        android:divider="#00000000"
        android:overScrollMode="never"
        ptr:ptrAnimationStyle="flip"
        android:layout_weight="1"
        ptr:ptrHeaderTextColor="#000000" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_bar_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/grey"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/course_rl_eva">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_card_comment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:id="@+id/course_num_eva" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/title_bar_line"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/course_rl_collect">
            <ImageView
                android:id="@+id/course_ic_collect"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_treehole_hehe"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:id="@+id/course_num_collect" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>